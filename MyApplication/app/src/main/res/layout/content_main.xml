<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#646464"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lenovo.myapplication.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm On"
        android:id="@+id/alarm_on"
        android:clickable="true"
        android:layout_above="@+id/alarm_status"
 />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm off"
        android:id="@+id/alarm_off"
        android:clickable="true"
        android:layout_below="@+id/timePicker"

        android:layout_alignEnd="@+id/timePicker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Alarm"
        android:textColor="#050505"
        android:id="@+id/alarm_status"
        android:clickable="true"
        android:layout_below="@+id/alarm_off"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />



    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
       />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ringtoneButton"
        android:src="@drawable/music_symb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alarm_status"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="306dp"
        android:layout_marginStart="306dp"
        android:layout_below="@+id/alarm_status"/>

    <TextView

        android:text="Default track"
        android:id="@+id/ringtoneText"
        android:layout_alignTop="@+id/ringtoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_status"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/alarm_off"
        android:layout_toRightOf="@+id/ringtoneButton"
        android:layout_toEndOf="@+id/ringtoneButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAlarmOff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/alarm_status"
        android:layout_toEndOf="@+id/alarm_status"
        android:layout_below="@+id/imageView" />

    <!--<com.example.lenovo.myapplication.CustomView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/customView"-->
        <!--android:layout_above="@+id/alarm_status"-->
        <!--android:layout_toLeftOf="@+id/alarm_off"-->
        <!--android:layout_below="@+id/timePicker"-->
        <!--android:layout_alignLeft="@+id/alarm_status"-->
        <!--android:layout_alignStart="@+id/alarm_status" />-->

</RelativeLayout>

